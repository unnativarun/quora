<p>
  <strong>Question:</strong>
  <%= @question.title %>
</p>

<p>
	<%= link_to "follow user", user_follows_path(question_id: @question.id), method: :post %>
</p>

<p>
	<%= link_to "follow topic", topic_follows_path(question_id: @question.id), method: :post %>
</p>	


<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td class="answer"><%= answer.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
